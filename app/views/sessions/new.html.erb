<section class="container col-lg-6 col-md-8 col-sm-11">
  <h3 class="text-center">Log in</h3>
  <%= form_for :user, url: session_path do |form| %>
    <div class="form-group">
      <%= form.text_field :username, placeholder: 'Username', required: true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.password_field :password, placeholder: 'password', required: true, class: 'form-control' %>
    </div>
    <%= submit_tag 'Sign in', class: 'btn btn-outline-primary align-self-center' %>
  <% end %>

  <div>Don't have an account? Click <a href="/signup">here</a> to sign up.</div>
</section>