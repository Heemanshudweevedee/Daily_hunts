<section class="container">
  <h1 class="text-center">Bookmarks</h1>
  <ul class="list-group align-items-center justify-content-center flex-wrap flex-row" style="list-style-type: none">
    <% @bookmarks.each do |x| %>
      <li class="col-lg-4 col-sm-11, col-md-6 bookmark">
        <div class="card">
          <div class="card-block">
            <h4 class="card-title">
              <%= link_to x.title,  x.link, target: '_blank', class: 'bookmark-title' %>
            </h4>
            <p class="card-text">
              <%= x.note %>
            </p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</section>